{
  "private": true,
  "name": "typescript-pgtyped-starter",
  "version": "0.0.3-alpha",
  "scripts": {
    "env": "unset NODE_ENV && export $(grep '^#' .env -v | xargs)",
    "env:production": "unset NODE_ENV && export $(grep '^#' .env.production -v | xargs)",
    "env:print": "npm run env && printenv",

    "utils:docker:show": "echo '\n\n███ CONTAINERS\n' && docker ps && echo '\n███ VOLUMES\n' && docker volume ls && echo '\n███ IMAGES\n' && docker image ls && echo '\n\n'",

    "webpack:build": "unset NODE_ENV && dotenv -e .env webpack --config tools/webpack/webpack.config.js",
    "webpack:start": "webpack serve --config tools/webpack/webpack.config.js",

    "db:postgresql:reset": "npm run -s env | docker-compose --env-file .env --file ./server/database/compose-postgresql.yml down --volumes",
    "db:postgresql:compose": "npm run -s db:postgresql:reset && docker-compose --env-file .env --file ./server/database/compose-postgresql.yml up --no-start",
    "db:postgresql:start": "docker-compose --env-file .env --file ./server/database/compose-postgresql.yml start",
    "db:postgresql:stop": "docker-compose --env-file .env --file ./server/database/compose-postgresql.yml stop",

    "db:mongo:reset": "npm run -s env | docker-compose --env-file .env --file ./server/database/compose-mongo.yml down --volumes",
    "db:mongo:compose": "npm run -s db:mongo:reset && docker-compose --env-file .env --file ./server/database/compose-mongo.yml up --no-start",
    "db:mongo:start": "docker-compose --env-file .env --file ./server/database/compose-mongo.yml start",
    "db:mongo:stop": "docker-compose --env-file .env --file ./server/database/compose-mongo.yml stop",
    "db:mongo:shell": "docker exec -it mongo_container mongosh",

    "pgtyped:start": "npx pgtyped -w -c ./pgtyped-config.json",
    "pgtyped:all": "npm run -s db:postgresql:reset && npm run -s db:postgresql:compose && npm run -s db:postgresql:start && npm run pgtyped:watch",
    "api:start": "npx ts-node --project server/api/tsconfig.json server/api/server.ts",
    "utils:prettier": "prettier --write \"./**/*.{js,ts,json}\"",
    "deps:check": "npm-check --skip-unused",
    "deps:update": "npm-check --update --skip-unused --save-exact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dietrich-stein/typescript-pgtyped-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "homepage": "",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "^7.12.18",
    "@pgtyped/cli": "^2.3.0",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^20.6.3",
    "@types/pg": "^8.10.5",
    "@types/webpack": "^5.28.1",
    "@types/webpack-dev-server": "^4.7.2",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.9.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-check": "^6.0.1",
    "postcss": "8.3",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.8.8",
    "regenerator-runtime": "^0.13.7",
    "require-json5": "^1.1.0",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "@pgtyped/runtime": "^2.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "typescript-rest": "^3.0.4"
  },
  "engines" : {
    "npm" : ">=9.8.1 <10.0.0",
    "node" : ">=18.18.2 <19.0.0"
  }
}
